<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/high_score"
            android:textSize="22sp"
            android:textColor="@color/primary"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/pilotcharacter"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="22sp"
            android:textColor="@color/primary"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_new_capitals"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="22dp"
            android:text="@string/button_capitals" />

        <Button
            android:id="@+id/button_new_countries"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="22dp"
            android:text="@string/button_countries" />

        <Button
            android:id="@+id/button_new_flags"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="22dp"
            android:text="@string/button_flags" />
        <Button
            android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="40dp"
            android:textSize="22dp"
            android:text="@string/continue_game" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>