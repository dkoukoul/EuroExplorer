<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:liteMode="true"
        />
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/primary"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:text="..."/>

        <TextView
            android:id="@+id/score"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/text"
            android:text="0"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cloudsContainer"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/cloudsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clouds"
            android:contentDescription="clouds" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/question_flag"
            android:textSize="22sp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/text" />

        <ImageView
            android:id="@+id/flagImage"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:src="@drawable/flag_at"
            android:contentDescription="flag" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/airplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/airplane"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:contentDescription="airplane" />

</RelativeLayout>
